<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DeviceName"
        android:id="@+id/textView_power_row_name"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView_power_row_meter"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/space_power_row"
        android:layout_toStartOf="@+id/space_power_row" />

    <Space
        android:layout_width="10px"
        android:layout_height="20px"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView_power_row_symbol"
        android:layout_toStartOf="@+id/textView_power_row_symbol"
        android:id="@+id/space_power_row" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="W"
        android:id="@+id/textView_power_row_symbol"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>